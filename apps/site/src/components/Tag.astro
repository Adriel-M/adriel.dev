---
import Link from '@/components/Link.astro'
import type { SluggedTag } from '@/libs/SluggedTag'
import { generateTagsPath } from '@/libs/UrlLibs'
interface Props {
  sluggedTag: SluggedTag
}

const { sluggedTag } = Astro.props
---

<Link
  href={generateTagsPath(sluggedTag)}
  class="mt-1 mr-3 text-sm font-medium text-primary-600 uppercase underline hover:text-primary-400"
>
  #{sluggedTag.tag}
</Link>
