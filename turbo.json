{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".astro/**"]
    },
    "lint": {},
    "lint:fix": {
      "cache": false
    },
    "format": {},
    "format:fix": {
      "cache": false
    },
    "test": {},
    "check": {
      "dependsOn": ["@adrieldev/esm-wrapper#build"]
    }
  },
  "globalDependencies": [
    "pnpm-lock.yaml"
  ],
  "remoteCache": {
    "signature": true
  }
}
