---
import Link from '@/components/Link.astro'
import type { SluggedTag } from '@/libs/SluggedTag'
import { generateTagsPath } from '@/libs/UrlLibs'
interface Props {
  sluggedTag: SluggedTag
}

const { sluggedTag } = Astro.props
---

<Link
  href={generateTagsPath(sluggedTag)}
  class="text-primary-500 hover:text-primary-600 mr-3 mt-1 text-sm font-medium uppercase underline"
>
  #{sluggedTag.tag}
</Link>
