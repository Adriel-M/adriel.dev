---
import { SEO as Seo } from 'astro-seo'

import siteConfig from '@/libs/siteConfig'

type BasicData = {
  type: 'basic'
  title: string
}

type FullData = {
  type: 'full'
  title: string
  description: string
  isPost: boolean
  ogImage: string
}

export type SeoData = BasicData | FullData

interface Props {
  seoData: SeoData
}

const { seoData } = Astro.props

const titleTemplate = `%s | ${siteConfig.title}`
---

{
  seoData.type === 'basic' ? (
    <Seo title={seoData.title} titleTemplate={titleTemplate} />
  ) : (
    <Seo
      title={seoData.title}
      titleTemplate={titleTemplate}
      description={seoData.description}
      openGraph={{
        basic: {
          title: seoData.title,
          type: seoData.isPost ? 'article' : 'website',
          image: seoData.ogImage,
        },
      }}
    />
  )
}
