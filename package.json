{
  "name": "adriel.dev",
  "version": "1.0.0",
  "description": "",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "packageManager": "bun@1.2.15",
  "scripts": {
    "prepare": "husky",
    "cli": "bun scripts/cli/index.ts",
    "predev": "bun run --cwd packages/esm-wrapper build",
    "dev": "concurrently \"bun run dev:esm\" \"bun run dev:site\"",
    "dev:esm": "bun run --cwd packages/esm-wrapper dev",
    "dev:site": "bun run --cwd packages/site dev",
    "build": "turbo run build",
    "preview": "bun run --filter ./packages/site preview",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix"
  },
  "type": "module",
  "devDependencies": {
    "@adrieldev/eslint-configs": "workspace:*",
    "@inquirer/prompts": "7.5.3",
    "concurrently": "9.1.2",
    "eslint": "9.28.0",
    "github-slugger": "2.0.0",
    "globals": "16.2.0",
    "gray-matter": "4.0.3",
    "husky": "9.1.7",
    "lint-staged": "16.1.0",
    "nodemon": "3.1.10",
    "prettier": "3.5.3",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwind": "2.2.12",
    "turbo": "2.5.4"
  },
  "lint-staged": {
    "*.+(ts|tsx|css|mdx|js|mjs|astro)": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
