{
  "name": "adriel.dev",
  "version": "1.0.0",
  "description": "",
  "workspaces": ["packages/*"],
  "private": true,
  "packageManager": "bun@1.2.0",
  "scripts": {
    "prepare": "husky",
    "cli": "bun scripts/cli/index.ts",
    "predev": "bun run --filter ./packages/esm-wrapper build",
    "dev": "concurrently \"bun run dev:esm\" \"nodemon --watch packages/esm-wrapper/dist --exec 'bun run --cwd apps/site dev'\"",
    "build": "turbo run build",
    "preview": "bun run --filter ./packages/site preview"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@eslint/markdown": "^6.4.0",
    "@inquirer/prompts": "^7.5.3",
    "astro-eslint-parser": "^1.2.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-path-alias": "^2.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "github-slugger": "^2.0.0",
    "globals": "^16.2.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwind": "^2.2.12",
    "turbo": "^2.5.4",
    "typescript-eslint": "^8.33.0"
  },
  "lint-staged": {
    "*.+(ts|tsx|css|mdx|js|mjs|astro)": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
