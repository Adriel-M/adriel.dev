{
  "name": "adriel.dev",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "packageManager": "pnpm@10.30.2",
  "scripts": {
    "prepare": "husky",
    "cli": "tsx packages/cli/src/index.ts apps/site/src/content/posts",
    "predev": "pnpm --filter @adrieldev/esm-wrapper build",
    "dev": "concurrently \"pnpm run dev:esm\" \"pnpm run dev:site\"",
    "dev:esm": "pnpm --filter @adrieldev/esm-wrapper dev",
    "dev:site": "pnpm --filter site dev",
    "build": "turbo run build",
    "preview": "pnpm --filter site preview",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "test": "turbo run --filter site test",
    "test:watch": "pnpm --filter site test:watch",
    "check": "turbo run --filter site check"
  },
  "type": "module",
  "devDependencies": {
    "@adrieldev/cli": "workspace:*",
    "@adrieldev/eslint-configs": "workspace:*",
    "concurrently": "9.2.1",
    "eslint": "10.0.1",
    "globals": "17.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "tsx": "4.21.0",
    "turbo": "2.8.10"
  },
  "lint-staged": {
    "*.+(ts|tsx|css|mdx|js|mjs|astro)": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
